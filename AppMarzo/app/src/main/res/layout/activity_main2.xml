<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00CA0909"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/obtenerFecha2"
            android:layout_width="43dp"
            android:layout_height="30dp"
            android:layout_marginTop="396dp"
            android:layout_marginEnd="22dp"
            android:background="@android:drawable/btn_dropdown"
            android:textColor="#0E1212"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back_3" />

        <Button
            android:id="@+id/obtenerFecha4"
            android:layout_width="43dp"
            android:layout_height="30dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="22dp"
            android:background="@android:drawable/btn_dropdown"
            android:textColor="#0E1212"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/Visor_2"
            android:layout_width="122dp"
            android:layout_height="30dp"
            android:layout_marginTop="11dp"
            android:background="#00EC0C0C"
            android:backgroundTint="#00C71313"
            android:clickable="false"
            android:textAlignment="textStart"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/obtenerFecha2"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/Visor_4"
            android:layout_width="122dp"
            android:layout_height="30dp"
            android:layout_marginTop="112dp"
            android:background="#00EC0C0C"
            android:backgroundTint="#00C71313"
            android:clickable="false"
            android:textAlignment="textStart"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/obtenerFecha2"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="263dp"
            android:layout_height="19dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="74dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/deadline_que_usted_necesita_el_producto"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <ImageButton
            android:id="@+id/back_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#f4f4f4"
            android:contentDescription="TODO"
            android:tint="#1A237E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="118dp"
            android:layout_height="22dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="147dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/disponibilidad"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="118dp"
            android:layout_height="22dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="149dp"
            android:text="@string/app"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="118dp"
            android:layout_height="22dp"
            android:layout_marginEnd="149dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/mockup"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="331dp"
            android:layout_height="133dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="46dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/editText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:clickable="false"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Pedido convencional"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/editText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:clickable="false"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Pedido con urgencia"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Disponible en 7, 15 o 30 dìas hàbiles"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editText2" />

                <Switch
                    android:id="@+id/OnOff_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="108dp"
                    android:textOff="OFF"
                    app:layout_constraintStart_toEndOf="@+id/editText2"
                    app:layout_constraintTop_toTopOf="parent" />

                <Switch
                    android:id="@+id/OnOff_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="108dp"
                    android:layout_marginTop="36dp"
                    app:layout_constraintStart_toEndOf="@+id/editText3"
                    app:layout_constraintTop_toBottomOf="@+id/OnOff_1" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Disponible en 48hs"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editText3" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="342dp"
            android:layout_height="32dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="29dp"
            android:fontFamily="sans-serif-medium"
            android:text="Primera fecha de entrega"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="344dp"
            android:layout_height="30dp"
            android:layout_marginStart="38dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="Segunda fecha de entrega"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/Visor_3"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/continuar_2"
            android:layout_width="105dp"
            android:layout_height="45dp"
            android:layout_marginStart="156dp"
            android:layout_marginBottom="74dp"
            android:background="#01579B"
            android:text="Continuar"
            android:textColor="#F4F6F6 "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/obtenerFecha"
            android:layout_width="43dp"
            android:layout_height="30dp"
            android:layout_marginTop="396dp"
            android:background="@android:drawable/btn_dropdown"
            android:textColor="#0E1212"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/Visor_1"
            app:layout_constraintTop_toBottomOf="@+id/back_3"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/obtenerFecha3"
            android:layout_width="43dp"
            android:layout_height="30dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="19dp"
            android:background="@android:drawable/btn_dropdown"
            android:textColor="#0E1212"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@+id/Visor_4"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/Visor_3"
            android:layout_width="122dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="62dp"
            android:background="#00EC0C0C"
            android:backgroundTint="#00C71313"
            android:clickable="false"
            android:textAlignment="textStart"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/continuar_2"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/Visor_1"
            android:layout_width="122dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="11dp"
            android:background="#00EC0C0C"
            android:backgroundTint="#00C71313"
            android:clickable="false"
            android:textAlignment="textStart"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/recibidorMedidaID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:text="TextView"
            android:textColor="#00000000"
            app:layout_constraintBottom_toTopOf="@+id/recibidorTipoID"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/recibidorTipoID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="118dp"
            android:text="TextView"
            android:textColor="#00000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/colorID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="TextView"
            android:textColor="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recibidorTipoID" />

        <TextView
            android:id="@+id/recibidorTapaID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="TextView"
            android:textColor="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/colorID" />

        <TextView
            android:id="@+id/recibidorGradoID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="TextView"
            android:textColor="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recibidorTapaID" />

        <TextView
            android:id="@+id/recibidorGraficaID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="TextView"
            android:textColor="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recibidorGradoID" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>